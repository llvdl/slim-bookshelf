{% extends 'layout.twig' %}

{% set title = 'All books' %}
{% block title %}{{title}}{% endblock %}

{% block content %}
<h1>{{title}}</h1>

<ul>
{% for book in books %}
    <li>{{ book.title }} <a href="{{base_url()}}{{ path_for('author', {authorId: book.author.id}) }}">({{ book.author.name }})</a></li>
{% endfor %}
</ul>

{% endblock %}
